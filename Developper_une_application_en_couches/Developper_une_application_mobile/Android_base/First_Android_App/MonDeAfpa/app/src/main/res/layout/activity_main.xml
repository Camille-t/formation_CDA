<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="384dp"
            android:layout_height="567dp" tools:srcCompat="@drawable/logo_afpa"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.592"/>
    <TextView
            android:text="Le dé numérique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="168dp"/>
    <TextView
            android:text="Faces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="228dp"
            app:layout_constraintHorizontal_bias="0.659"/>
    <EditText
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/activity_main_faces_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2" android:text="@string/number_of_faces"/>
    <Button
            android:text="@string/roll_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/activity_main_roll_btn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="164dp"/>
</android.support.constraint.ConstraintLayout>